# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
# Change $SCRIPT_DIR to the location of your scripts!
separator_block_width=0
markup=pango

[root-disk]
background=#3B4252
color=#ECEFF4
command=echo "<span foreground='#3B4252' background='#2E3440' size='large'> </span> / $($SCRIPT_DIR/disk/disk)"
instance=/
markup=pango
min_width=256G
separator=false
interval=60

# Disk usage
#
# The directory defaults to $HOME if the instance is not specified.
# The script may be called with a optional argument to set the alert
# (defaults to 10 for 10%).
[disk]
background=#434C5E
color=#ECEFF4
command=echo "<span foreground='#434C5E' background='#3B4252' size='large'> </span>  $($SCRIPT_DIR/disk/disk)"
markup=pango
min_width=256G
separator=false
interval=60

[volume]
background=#4C566A
color=#ECEFF4
command=echo "<span foreground='#4C566A' background='#434C5E' size='large'> </span> 󰕾 $($SCRIPT_DIR/volume/volume)"
markup=pango
interval=once
signal=1

# Battery indicator
#
# The battery instance defaults to 0.
[battery]
background=#5E81AC
command=echo "<span foreground='#5E81AC' background='#4C566A' size='large'> </span> $($SCRIPT_DIR/battery/battery) "
markup=pango
min_width=100% CHR
separator=false
interval=30

# Date Time
#
[time]
background=#81A1C1
command=echo "<span foreground='#81A1C1' background='#5E81AC' size='large'> </span> $(date '+%d-%m-%Y %H:%M') <span foreground='#88C0D0' size='large'></span>"
markup=pango
separator=false
interval=10

# Power Menu
[rofi-powermenu]
background=#88C0D0
command=echo "<span size='large'> 󰤆 </span><span size='large'></span>"; [[ -z "${BLOCK_BUTTON}" ]] || rofi -show menu -modi "menu:rofi-power-menu --choices=shutdown/reboot/suspend/logout" &
markup=pango
separator=false
interval=once
